@model List<Topic>

@{
    ViewData["Title"] = "Topic";
}


<div class="modal fade" id="newmodal" tabindex="-1" role="dialog"></div>

<p class="text-xs-right">
    <a asp-action="New" data-toggle="modal" data-target="#newmodal" data-ajax="true" data-ajax-update="#newmodal">
        Nuevo Topic
    </a>
</p>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" data-toggle="modal" data-target="#newmodal" data-ajax="true" data-ajax-update="#newmodal">
                            Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" data-toggle="modal" data-target="#newmodal" data-ajax="true" data-ajax-update="#newmodal">
                            Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>